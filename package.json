{
  "name": "markdown-it-enhancer-repo",
  "version": "1.0.0",
  "description": "Markdown-it - modern pluggable markdown parser.",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "lint": "eslint --fix",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs",
    "type-check": "tsc --noEmit",
    "rm:dist": "rimraf -g ./packages/*/dist/ ./packages/plugins/*/dist/",
    "build:base": "pnpm --filter ./packages/{uc-micro,shared,md-url,punycode,entities} build",
    "build:linkify-it": "pnpm --filter ./packages/linkify-it build",
    "build:test-toolkit": "pnpm --filter ./packages/test-toolkit build",
    "build:core": "pnpm --filter ./packages/core build",
    "build:plugins": "pnpm --filter ./packages/plugins/* build",
    "build": "pnpm rm:dist & pnpm build:base & pnpm build:linkify-it & pnpm build:core & pnpm build:test-toolkit & pnpm build:plugins"
  },
  "devDependencies": {
    "@eslint/js": "catalog:lint",
    "@sindresorhus/slugify": "catalog:test",
    "@stylistic/eslint-plugin": "catalog:lint",
    "@types/node": "catalog:types",
    "@vitest/coverage-istanbul": "catalog:test",
    "@vitest/ui": "catalog:test",
    "cheerio": "catalog:test",
    "eslint": "catalog:lint",
    "eslint-plugin-simple-import-sort": "catalog:lint",
    "globals": "catalog:lint",
    "jiti": "catalog:lint",
    "markdown-it-attrs-for-enhancer": "workspace:*",
    "markdown-it-enhancer": "workspace:*",
    "markdown-it-enhancer-test-toolkit": "workspace:*",
    "markdown-it-for-inline-for-enhancer": "workspace:*",
    "markdown-it-implicit-figures-for-enhancer": "workspace:*",
    "markdown-it-katex-for-enhancer": "workspace:*",
    "prettier": "catalog:lint",
    "rimraf": "catalog:build",
    "typescript": "catalog:",
    "typescript-eslint": "catalog:lint",
    "vite": "catalog:build",
    "vite-plugin-dts": "catalog:build",
    "vitepress": "catalog:doc",
    "vitest": "catalog:test"
  },
  "engines": {
    "node": ">=20"
  },
  "packageManager": "pnpm@10.15.1"
}

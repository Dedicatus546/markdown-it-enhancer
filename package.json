{
  "name": "markdown-it-enhancer-repo",
  "version": "1.0.0",
  "description": "Markdown-it - modern pluggable markdown parser.",
  "type": "module",
  "author": "Par9uet <par9uet@qq.com>",
  "license": "MIT",
  "scripts": {
    "lint": "eslint --fix",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs",
    "type-check": "tsc --noEmit",
    "build:base": "pnpm --stream --filter \"./packages/{uc-micro,shared,md-url,punycode,entities}\" build",
    "build:linkify-it": "pnpm --stream --filter \"./packages/linkify-it\" build",
    "build:test-toolkit": "pnpm --stream --filter \"./packages/test-toolkit\" build",
    "build:core": "pnpm --stream --filter \"./packages/core\" build",
    "build:plugins": "pnpm --stream --filter \"./packages/plugin-*\" build",
    "build": "pnpm build:base & pnpm build:linkify-it & pnpm build:core & pnpm build:test-toolkit & pnpm build:plugins",
    "test": "vitest"
  },
  "devDependencies": {
    "@eslint/js": "catalog:lint",
    "@markdown-it-enhancer/core": "workspace:*",
    "@markdown-it-enhancer/plugin-anchor": "workspace:*",
    "@markdown-it-enhancer/plugin-attrs": "workspace:*",
    "@markdown-it-enhancer/plugin-for-inline": "workspace:*",
    "@markdown-it-enhancer/plugin-implicit-figures": "workspace:*",
    "@markdown-it-enhancer/plugin-katex": "workspace:*",
    "@markdown-it-enhancer/test-toolkit": "workspace:*",
    "@sindresorhus/slugify": "catalog:test",
    "@stylistic/eslint-plugin": "catalog:lint",
    "@types/node": "catalog:types",
    "@vitest/coverage-istanbul": "catalog:test",
    "@vitest/ui": "catalog:test",
    "cheerio": "catalog:test",
    "eslint": "catalog:lint",
    "eslint-plugin-simple-import-sort": "catalog:lint",
    "globals": "catalog:lint",
    "jiti": "catalog:lint",
    "lerna": "^9.0.0",
    "tsdown": "catalog:build",
    "typescript": "catalog:",
    "typescript-eslint": "catalog:lint",
    "vitepress": "catalog:doc",
    "vitest": "catalog:test"
  },
  "engines": {
    "node": ">=20"
  },
  "packageManager": "pnpm@10.18.3",
  "dependencies": {}
}

{
  "compilerOptions": {
    "skipLibCheck": true,
    "lib": [
      "ESNext"
    ],
    "target": "esnext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "paths": {
      "@/*": [
        "./src/*"
      ],
    }
  },
  "include": [
    "./src/**/*.ts",
    "./vite-env.d.ts",
    "./test/**/*.ts"
  ]
}

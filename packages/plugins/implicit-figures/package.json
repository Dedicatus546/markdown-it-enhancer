{
  "name": "markdown-it-implicit-figures-for-enhancer",
  "version": "0.12.1010",
  "description": "Render images occurring by itself in a paragraph as `<figure><img ...></figure>`, similar to pandoc's implicit_figures",
  "license": "MIT",
  "main": "dist/index.js",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "vite build",
    "build:dev": "vite build --watch",
    "test": "vitest"
  },
  "files": [
    "dist/"
  ],
  "keywords": [
    "markdown-it",
    "markdown-it-enhancer",
    "markdown-it-plugin",
    "img",
    "figure",
    "image",
    "implicit_figures"
  ],
  "peerDependencies": {
    "markdown-it-enhancer": "workspace:*"
  },
  "engines": {
    "node": ">=20"
  },
  "packageManager": "pnpm@10.14.0"
